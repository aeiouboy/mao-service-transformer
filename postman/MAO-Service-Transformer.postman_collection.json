{
  "info": {
    "name": "MAO Service Transformer",
    "description": "Collection for testing MAO Service Transformer API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "123456789-C7L2LCDCTCC2AE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/order/release-health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "release-health"]
        },
        "description": "Check if the service is healthy and database connection is working"
      },
      "response": []
    },
    {
      "name": "Get Orders List",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/order/orders-list",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "orders-list"]
        },
        "description": "Get all orders from database for testing"
      },
      "response": []
    },
    {
      "name": "Get Order Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/order/{{orderId}}/release-status",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "{{orderId}}", "release-status"]
        },
        "description": "Check if specific order exists and can be transformed"
      },
      "response": []
    },
    {
      "name": "Transform Order to Sample Format",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/release-transform-sample",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "release-transform-sample"]
        },
        "description": "Transform order to release format (legacy endpoint)"
      },
      "response": []
    },
    {
      "name": "Transform Order to PascalCase Format",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/release-transform-pascal",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "release-transform-pascal"]
        },
        "description": "Transform order to PascalCase format matching sample payload"
      },
      "response": []
    },
    {
      "name": "Transform Order to Release",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/release-transform",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "release-transform"]
        },
        "description": "Transform order to release format"
      },
      "response": []
    },
    {
      "name": "Transform and Save Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/release-transform-save",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "release-transform-save"]
        },
        "description": "Transform order and save to file"
      },
      "response": []
    },
    {
      "name": "Transform PMP Payload",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"OrderId\": \"{{orderId}}\",\n  \"CustomerId\": \"CUST001\",\n  \"CustomerEmail\": \"test@example.com\",\n  \"CustomerFirstName\": \"John\",\n  \"CustomerLastName\": \"Doe\",\n  \"CustomerPhone\": \"+66123456789\",\n  \"CurrencyCode\": \"THB\",\n  \"OrderSubTotal\": 1000.00,\n  \"OrderTotal\": 1100.00,\n  \"TotalTaxes\": 70.00,\n  \"TotalCharges\": 30.00,\n  \"TotalDiscounts\": 0.00,\n  \"OrderLines\": [\n    {\n      \"OrderLineId\": \"LINE001\",\n      \"ItemId\": \"ITEM001\",\n      \"Quantity\": 2,\n      \"UnitPrice\": 500.00,\n      \"OrderLineTotal\": 1000.00\n    }\n  ],\n  \"Payments\": [\n    {\n      \"PaymentId\": \"PAY001\",\n      \"Amount\": 1100.00,\n      \"PaymentMethod\": \"Credit Card\",\n      \"Status\": \"Completed\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/transform-payload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "transform-payload"]
        },
        "description": "Transform PMP order payload directly to release format"
      },
      "response": []
    },
    {
      "name": "Test Different Order IDs",
      "item": [
        {
          "name": "Test Order 1",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"123456789-C7L2LCDCTCC2AE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/order/release-transform-pascal",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "release-transform-pascal"]
            },
            "description": "Test with order ID from database"
          },
          "response": []
        },
        {
          "name": "Test Order 2",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"403521240-C7LDVZNUTGAHMA\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/order/release-transform-pascal",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "release-transform-pascal"]
            },
            "description": "Test with another order ID from database"
          },
          "response": []
        },
        {
          "name": "Test Non-existent Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"NON-EXISTENT-ORDER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/order/release-transform-pascal",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "release-transform-pascal"]
            },
            "description": "Test error handling with non-existent order"
          },
          "response": []
        }
      ],
      "description": "Test different order IDs to verify functionality"
    },
    {
      "name": "Performance Tests",
      "item": [
        {
          "name": "Load Test - Multiple Requests",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/order/release-transform-pascal",
              "host": ["{{baseUrl}}"],
              "path": ["api", "order", "release-transform-pascal"]
            },
            "description": "Test performance with multiple concurrent requests"
          },
          "response": []
        }
      ],
      "description": "Performance and load testing scenarios"
    }
  ]
}
